<asp:Content runat="server" ID="BodyContent" ContentPlaceHolderID="MainContent">

    <table>
        <tr>
            <td rowspan = 2>
                <fieldset id="fsControle">
                    <legend>Escolha um Botão:</legend>
                    <asp:Button ID="btnDesvCon" runat="server" Text="Desvio Condicional" height="43px" Width="330px" OnClick="btnDesvCon_Click" />
                    <asp:Button ID="btnImport" runat="server" Text="Importação TXT" height="43px" width="330px" OnClick="btnImport_Click" />
                    <asp:Button ID="btnBDC" runat="server" Text="Banco Conectado" height="43px" width="330px" OnClick="btnBDC_Click" />
                    <asp:Button ID="btnBDD" runat="server" Text="Banco Desconectado" height="43px" width="330px" OnClick="btnBDD_Click1" />
                    <asp:Button ID="btnConsultar" runat="server" Text="Consultar" height="43px" width="330px" OnClick="btnConsultar_Click" />
                    <asp:Button ID="btnInserir" runat="server" Text="Inserir" height="43px" width="330px" OnClick="btnInserir_Click" />
                    <asp:Button ID="btnExcluir" runat="server" Text="Excluir" height="43px" width="330px" OnClick="btnExcluir_Click" />
                    <asp:Button ID="btnAlterar" runat="server" Text="Alterar" height="43px" width="330px" OnClick="btnAlterar_Click" />
                </fieldset>
            </td>
            <td>
                <fieldset id="fsArquivoTexto">
                    <legend>Conteudo de Importação do Arquivo Texto</legend>
                    <asp:ListBox ID="lstbxJogos" runat="server" Height="39px" Width="350px"></asp:ListBox>
                </fieldset>
            </td>
        </tr>
        <tr>
            <td>
                <fieldset id="fsBancoDeDados">
                    <legend>Banco De Dados</legend>
                    <fieldset id="fsPesquisaInseri">
                        <asp:Label ID="lblJogos" runat="server" Text="Jogo Escolhido:"></asp:Label>
                        <asp:TextBox ID="txtJogos" runat="server"></asp:TextBox>
                    </fieldset>
                    <fieldset id="fsGridBancoDeDados">
                        <legend>Dados Provenientes Do Banco</legend>
                        <asp:GridView ID="dtgdvwJogos" runat="server" 
                             AutoGenerateDeleteButton ="True"
                             AutoGenerateEditButton ="True"
                             AutoGenerateSelectButton ="True" 
                             OnPageIndexChanging="dtgdvwJogos_PageIndexChanging" 
                             OnRowDeleting="dtgdvwJogos_RowDeleting"
                             OnRowEditing="dtgdvwJogos_RowEditing"
                             OnRowUpdating="dtgdvwJogos_RowUpdating"
                             OnRowCancelingEdit="dtgdvwJogos_RowCancelingEdit"
                             OnSelectedIndexChanged="dtgdvwJogos_SelectedIndexChanged"
                            ></asp:GridView>
                    </fieldset>
                </fieldset>
            </td>
        </tr>
    </table>

