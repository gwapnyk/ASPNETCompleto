<%@ Page Title="Pagina inicial" Language="C#" MasterPageFile="~/Site.Master" AutoEventWireup="true" CodeBehind="Default.aspx.cs" Inherits="treinamentoInicialAspNetCompleto._Default" %>

<asp:Content runat="server" ID="FeaturedContent" ContentPlaceHolderID="FeaturedContent">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1><%: Title %>. JOGOS - </h1>
                <h2>Gestão de Jogos.</h2>
            </hgroup>
            <p>
                Para saber mais sobre o ASP.NET, visite <a href="http://asp.net" title="ASP.NET Website">http://asp.net</a>.
